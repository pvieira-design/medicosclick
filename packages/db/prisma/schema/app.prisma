    id                String   @id @default(uuid())
    
    userId            String   @unique
    user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    // Dados pessoais
    tamanhoCamisa     String?
    tamanhoCalcado    String?
    corFavorita       String?
    dataAniversario   DateTime?
    
    // Endereço
    cep               String?
    rua               String?
    numero            String?
    complemento       String?
    bairro            String?
    cidade            String?
    estado            String?
    
